<table class="table table-bordered">
	<tbody>
		<% @lists.each do |list| %>
			<% if list.completed %>
				<tr class=" table-secondary tb1" > 
					<td colspan="5" class="striker"><%= link_to list.description, edit_list_path(list), class: 'link' %></td>
					<td>
						<center>
							<%= form_for(list) do |f| %>
							<%= f.text_field :description, type: 'hidden' %>
							<%= f.check_box :completed, :checked=> false, :style => 'visibility : hidden'%>
                            <%= f.submit "Click to Redo", class: 'btn btn btn-info ' %>
							<% end %>
						</center>
					</td>
					<td><%= button_to "Remove", list, class: 'btn btn-outline-danger btn sm', method: :delete, data:{ turbo_confirm: 'You Sure ? '} %></td>
				</tr>
			<% else %>
				<tr > 
					<td><%= link_to list.description, edit_list_path(list) , class: 'link' %></td>
					<td>
						<center>
							<%= form_for(list) do |f| %>
							<%= f.text_field :description, type: 'hidden' %>
							<%= f.check_box :completed, :checked=> true, :style => 'visibility : hidden'%>
                            <%= f.submit "Done ;)", class: 'btn btn btn-success' %>	
							<% end %>
						</center>
					</td>
					<td><%= button_to "Remove", list,class: 'btn btn-outline-danger btn sm', method: :delete, data:{ turbo_confirm: 'You Sure ? '} %></td>
				</tr>
             <% end %>
		<% end %>
	</tbody>
</table>

